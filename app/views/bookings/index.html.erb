<% provide(:title, "Bookings") %>
<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<br>
      Bookingdate | Status  <% if admin_signed_in? %> | User <% end %>
        
<br>

    <% if user_signed_in? %>
      <% @bookings.where(user_id: current_user.id).each do |booking| %>
        <%= booking.bookingdate %> | <%= booking.status %> | <%= link_to 'Show', booking %> 
        <br>
      <% end %>
      
    <% elsif admin_signed_in? %>    
      <% @bookings.each do |booking| %>
       <% @thisuser = User.where(id: booking.user_id) %>
         <% @thisuser.each do |userinquestion| %>
            <%= booking.bookingdate %> | <%= booking.status %> | <%= userinquestion.email %>
            <% if user_signed_in? || admin_signed_in? %>
              <%= link_to 'Show', booking %> |
            <% end %>
            <% if admin_signed_in? %>
              <%= link_to 'Edit', edit_booking_path(booking) %> |
              <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          <br>
        <% end %>
      <% end %>
    <% end %>
    
<br>
<br>


