<% provide(:title, "Screens") %>
<p id="notice"><%= notice %></p>

<h1>Screens</h1>

<br><br>
Screenname | Rows | Width | Seating
<br>

    <% @screens.each do |screen| %>
      <%= screen.screenname %> | <%= screen.rows %> | <%= screen.width %> | <%= screen.seating %> 
      
      <% if user_signed_in? || admin_signed_in? %>
        <%= link_to 'Show', screen %> |
      <% end %>
      <% if admin_signed_in? %>
        <%= link_to 'Edit', edit_screen_path(screen) %> | <%= link_to 'Destroy', screen, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <br>
    <% end %>
  
<br><br>

<% if admin_signed_in? %>
  <%= link_to 'New Screen', new_screen_path %>
<% end %>
