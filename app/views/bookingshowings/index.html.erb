<% provide(:title, "Bookingshowings") %>
<p id="notice"><%= notice %></p>

<h1>Bookingshowings</h1>

<br><br>

Showing | Filmtitle | Screenname | Seat | Price | Booking

<br><br>

<% @bookingshowings.each do |bookingshowing| %>
  <%= bookingshowing.showing_id %> | <%= bookingshowing.filmtitle %> | <%= bookingshowing.screenname %> | <%= bookingshowing.seat %> | <%= bookingshowing.price %> | <%= bookingshowing.booking %>
 
  <% if user_signed_in? || admin_signed_in? %>
    <%= link_to 'Show', bookingshowing, :class => "link"  %> |  
  <% end %>
  <% if admin_signed_in? %>
    <%= link_to 'Edit', edit_bookingshowing_path(bookingshowing), :class => "link" %> | 
    <%= link_to 'Destroy', bookingshowing, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link" %> 
  <% end %>
  <br>
<% end %>
<br><br>
